                  <Image url="@/resources/pizzaSlice.png" />
               </image>
            </ImageView>
            <Label text="SunDevil Pizza" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
