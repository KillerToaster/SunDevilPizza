      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Order Status (Chef)" wrapText="true">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <VBox fx:id="chefOrderBox" prefHeight="200.0" prefWidth="100.0">
