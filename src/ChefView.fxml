                        <Insets right="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="readyButton" mnemonicParsing="false" onAction="#handleReady" style="-fx-background-color: DARKRED;" text="Ready" textFill="WHITE">
